
<h4>Admins</h4><br>
<%= link_to "Novo Administrador", new_admin_admin_path, class:'btn btn-primary mb-2'%>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">E-mail</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @admins.each do  |admin| %>
    <tr>
      <th scope="row"><%= admin.id %></th>
      <td><%= admin.name %></td>
      <td><%= admin.email %></td>
      <td><%= link_to 'Editar', edit_admin_admin_path(admin), class:'btn btn-warning btn-sm' %></td>
      <td><%= link_to 'Deletar', admin_admin_path(admin),  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:'btn btn-danger btn-sm' %></td>
    </tr>
    <% end%>
  </tbody>
</table>

